                    </li>
                </ul>
            </section>
            <section>
                <h2>Add Ingredients</h2>
                <!-- Text box for entering the name of an ingredient -->
                <form action="/ingredients" method="POST">
                    <label for="add_item">Ingredient: </label>
                    <input type="text" name="add_item" id="add_item" />
                    <!-- This button connects to a POST request -->
                    <input type="image" src="img/plus.png" class="add_item btn btn-success btn-sm">
                </form>
            </section>
        </div>
	</div>
