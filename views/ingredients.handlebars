<main class="container">
	<div class="row">
		<h1>Add or Edit Your <em>Ingredients</em></h1>
        <div id="item_form">
            <section>
                <h2>Edit Ingredients</h2>
                <!-- TODO: Import ingredients from context object. -->
                <ul>
                    {{#each item}}
                        <li>
                            <form action="/ingredients">
                                <input type="hidden" value="{{this.id}}" name="item">
                                <input type="text" value="{{this.name}}" class="editable_input" disabled>
                                <div>
                                    <input type="image" src="img/pencil.png" class="item_edit btn btn-primary btn-sm">
                                    <!-- This button connects to a PUT request -->
                                    <input type="image" src="img/checkmark.png" class="confirm_item_edit btn btn-success btn-sm">
                                </div>
                                <div>
                                    <input type="image" src="img/cancel.png" class="cancel_item_edit btn btn-warning btn-sm">
                                    <!-- This button connects to a DELETE request -->
                                    <input type="image" src="img/minus.png" class="delete_item btn btn-danger btn-sm">
                                </div>
                            </form>
                        </li>
                    {{/each}}
                    <!-- TODO: Remove the following 3 examples once the server is connected. -->
